<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0;netstandard2.1</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Description>
            $(BaseDescription)

            This package contains supporting types for writing expressive unit tests of REST-focused API wrappers, 
            allowing simple and direct testing of expected clientside behaviour.
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="RichardSzalay.MockHttp" Version="6.0.0"/>
        <PackageReference Include="xunit.assert" Version="2.4.1"/>
        <PackageReference Include="System.Text.Json" Version="5.0.2"/>
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Json\JsonArrayMatcherBuilder.cs">
            <DependentUpon>JsonArrayMatcher.cs</DependentUpon>
        </Compile>
        <Compile Update="Json\JsonElementMatcherBuilder.cs">
            <DependentUpon>JsonElementMatcher.cs</DependentUpon>
        </Compile>
        <Compile Update="Json\JsonObjectMatcherBuilder.cs">
            <DependentUpon>JsonObjectMatcher.cs</DependentUpon>
        </Compile>
    </ItemGroup>

</Project>
